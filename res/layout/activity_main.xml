<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:columnCount="5"
    android:rowCount="5"
    tools:context="com.legendleo.calculator.MainActivity" >

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="5"
        android:gravity="right"
        android:textSize="28sp"
        android:text="0" />

    <Button
        android:id="@+id/num7"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="7" />
    <Button
        android:id="@+id/num8"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="8" />
    <Button
        android:id="@+id/num9"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="9" />
    <Button
        android:id="@+id/divide"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="/" />
    <Button
        android:id="@+id/backspace"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="←" />


    <Button
        android:id="@+id/num4"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="4" />
    <Button
        android:id="@+id/num5"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="5" />
    <Button
        android:id="@+id/num6"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="6" />
    <Button
        android:id="@+id/mutiply"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="*" />


    <Button
        android:id="@+id/denominator"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="1/x" />


    <Button
        android:id="@+id/num1"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="1" />
    <Button
        android:id="@+id/num2"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="2" />
    <Button
        android:id="@+id/num3"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="3" />
    <Button
        android:id="@+id/minus"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="-" />
    <Button
        android:id="@+id/equal"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="=" />

    <Button
        android:id="@+id/num0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="0" />
    <Button
        android:id="@+id/point"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="." />
    <Button
        android:id="@+id/plus"
        android:background="@drawable/bg"
        android:layout_margin="2dp"
        android:text="+" />

</GridLayout>